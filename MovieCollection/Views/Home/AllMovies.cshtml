@{
    ViewBag.Title = "All Movies";
}

@model IEnumerable<MovieCollection.Models.NewMovie>

<div>
    <h2> Check out all the movies so far!</h2>
</div>

<table class="table table-bordered">
    <thead class="thead-dark">
        <!--Table Labels-->
        <tr><th>Category</th><th>Title</th><th>Year</th><th>Director</th><th>Rating</th><th>Edited</th><th>Lent To</th><th>Notes</th></tr>
    </thead>

    <tbody class="table-striped">
        @foreach (MovieCollection.Models.NewMovie x in Model)
        {
            <tr>
                <!--variables from NewMovie-->
                <td>@x.Category</td>
                <td>@x.Title</td>
                <td>@x.Year</td>
                <td>@x.Director</td>
                <td>@x.Rating</td>
                <td>@x.Edited</td>
                <td>@x.Lent</td>
                <td>@x.Notes</td>
            </tr>
        }
    </tbody>
</table>