@{
    ViewBag.Title = "New Movie Form";
}

@model MovieCollection.Models.NewMovie
<!--variables from newmovie.cs in models, HTML tag for error messages -->
<form asp-action="EnterMovies" method="post">

    <div>
        <label asp-for="Category">Category: </label>
        <input asp-for="Category" />
    </div>
    <div class="text-danger">@Html.ValidationMessageFor(m => m.Category)</div>

    <div>
        <label asp-for="Title">Title: </label>
        <input asp-for="Title" />
    </div>
    <div class="text-danger">@Html.ValidationMessageFor(m => m.Year)</div>

    <div>
        <label asp-for="Year">Year: </label>
        <input asp-for="Year" />
    </div>
    <div class="text-danger">@Html.ValidationMessageFor(m => m.Director)</div>

    <div>
        <label asp-for="Director">Director: </label>
        <input asp-for="Director" />
    </div>
    <div class="text-danger">@Html.ValidationMessageFor(m => m.Rating)</div>

    <div>
        <label asp-for="Rating">Rating: </label>
        <!--drop down menu-->
        <select asp-for="Rating">
            <option value="">Select One</option>
            <option value="G">G</option>
            <option value="PG">PG</option>
            <option value="PG-13">PG-13</option>
            <option value="R">R</option>
        </select>
    </div>

    <div>
        <label asp-for="Edited">Edited: </label>
        <!--drop down menu bool-->
        <select asp-for="Edited">
            <option value="">Select One</option>
            <option value="true">Yes</option>
            <option value="false">No</option>
        </select>
    </div>

    <div>
        <label asp-for="Lent">Lent To: </label>
        <input asp-for="Lent" />
    </div>

    <div>
        <label asp-for="Notes">Notes: </label>
        <input asp-for="Notes" />
    </div>

    <button type="submit">Add Movie</button>
</form>
